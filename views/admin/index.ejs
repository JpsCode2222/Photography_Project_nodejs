<%- include('navbar.ejs')%>
<div class="container-fluid">
  <!--  Row 1 -->
  <div class="row">
    <div class="col-lg-12 d-flex align-items-strech">
      <div class="card w-100">
        <div class="card-body">
          <div
            class="d-sm-flex d-block align-items-center justify-content-between mb-9"
          >
            <div class="mb-3 mb-sm-0">
              <h5 class="card-title fw-semibold">Basic Information</h5>
            </div>
          </div>
          <% if(!basic_info){%>
          <form action="/admin/save_basic_information" method="post">
            <div class="row">
              <div class="col-md-4 mt-3">
                <label>Enter Mobile <span class="text-danger">*</span></label>
                <input
                  type="text"
                  class="form-control"
                  required
                  name="mobile"
                />
              </div>
              <div class="col-md-4 mt-3">
                <label>Enter Email<span class="text-danger">*</span></label>
                <input
                  type="email"
                  class="form-control"
                  required
                  name="email"
                />
              </div>
              <div class="col-md-4 mt-3">
                <label>Enter Address <span class="text-danger">*</span></label>
                <textarea
                  class="form-control"
                  required
                  name="address"
                ></textarea>
              </div>
              <div class="col-md-6 mt-3">
                <label>Facebook Link<span class="text-danger">*</span></label>
                <input
                  type="url"
                  class="form-control"
                  required
                  name="facebook_link"
                />
              </div>
              <div class="col-md-6 mt-3">
                <label>Twitter Link<span class="text-danger">*</span></label>
                <input
                  type="url"
                  class="form-control"
                  required
                  name="twitter_link"
                />
              </div>
              <div class="col-md-6 mt-3">
                <label>Instagram Link<span class="text-danger">*</span></label>
                <input
                  type="url"
                  class="form-control"
                  required
                  name="instagram_link"
                />
              </div>
              <div class="col-md-6 mt-3">
                <label>Linkedin Link<span class="text-danger">*</span></label>
                <input
                  type="url"
                  class="form-control"
                  required
                  name="linkedin_link"
                />
              </div>
              <div class="col-md-12 text-center mt-4">
                <button class="btn btn-primary">Submit</button>
              </div>
            </div>
          </form>
          <%}else{%>
          <form action="/admin/update_basic_information" method="post">
            <div class="row">
              <div class="col-md-4 mt-3">
                <label>Enter Mobile <span class="text-danger">*</span></label>
                <input
                  type="text"
                  class="form-control"
                  value="<%=basic_info.mobile%>"
                  required
                  name="mobile"
                />
              </div>
              <div class="col-md-4 mt-3">
                <label>Enter Email<span class="text-danger">*</span></label>
                <input
                  type="email"
                  class="form-control"
                  value="<%=basic_info.email%>"
                  required
                  name="email"
                />
              </div>
              <div class="col-md-4 mt-3">
                <label>Enter Address <span class="text-danger">*</span></label>
                <textarea class="form-control" required name="address">
<%=basic_info.address%></textarea
                >
              </div>
              <div class="col-md-6 mt-3">
                <label>Facebook Link<span class="text-danger">*</span></label>
                <input
                  type="url"
                  class="form-control"
                  value="<%=basic_info.facebook_link%>"
                  required
                  name="facebook_link"
                />
              </div>
              <div class="col-md-6 mt-3">
                <label>Twitter Link<span class="text-danger">*</span></label>
                <input
                  type="url"
                  class="form-control"
                  value="<%=basic_info.twitter_link%>"
                  required
                  name="twitter_link"
                />
              </div>
              <div class="col-md-6 mt-3">
                <label>Instagram Link<span class="text-danger">*</span></label>
                <input
                  type="url"
                  class="form-control"
                  value="<%=basic_info.instagram_link%>"
                  required
                  name="instagram_link"
                />
              </div>
              <div class="col-md-6 mt-3">
                <label>Linkedin Link<span class="text-danger">*</span></label>
                <input
                  type="url"
                  class="form-control"
                  value="<%=basic_info.linkedin_link%>"
                  required
                  name="linkedin_link"
                />
              </div>
              <div class="col-md-12 text-center mt-4">
                <button class="btn btn-primary">Update</button>
              </div>
            </div>
          </form>
          <%}%>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('footer.ejs')%>
