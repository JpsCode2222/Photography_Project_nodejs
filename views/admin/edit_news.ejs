<%- include('navbar.ejs')%>
<div class="container-fluid">
  <!--  Row 1 -->
  <div class="row">
    <div class="col-lg-12 d-flex align-items-strech">
      <div class="card w-100">
        <div class="card-body">
          <div
            class="d-sm-flex d-block align-items-center justify-content-between mb-9"
          >
            <div class="mb-3 mb-sm-0">
              <h5 class="card-title fw-semibold">Latest News</h5>
            </div>
          </div>
          <form
            action="/admin/update_news"
            method="post"
            enctype="multipart/form-data"
          >
            <div class="row">
              <div class="col-md-4 mt-3">
                <label>Select Image</label>
                <input type="file" class="form-control" name="image" />
                <input
                  type="hidden"
                  value="<%=news.id%>"
                  class="form-control"
                  name="id"
                />
              </div>
              <div class="col-md-2 mt-3">
                <img src="/images/<%=news.image%>" width="150px" alt="" />
              </div>
              <div class="col-md-6 mt-3">
                <label>Date <span class="text-danger">*</span></label>
                <input
                  type="date"
                  class="form-control"
                  required
                  value="<%=news.news_date%>"
                  name="news_date"
                />
              </div>
              <div class="col-md-6 mt-3">
                <label>Title <span class="text-danger">*</span></label>
                <input
                  type="text"
                  class="form-control"
                  value="<%=news.title%>"
                  required
                  name="title"
                />
              </div>
              <div class="col-md-6 mt-3">
                <label
                  >Enter Description<span class="text-danger">*</span></label
                >
                <textarea class="form-control" required name="description">
<%=news.description%></textarea
                >
              </div>
              <div class="col-md-12 text-center mt-4">
                <button class="btn btn-primary">Save News</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('footer.ejs')%>
