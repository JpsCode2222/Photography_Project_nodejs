<%- include('navbar.ejs')%>
<div class="container-fluid">
<!--  Row 1 -->
<div class="row">
  <div class="col-lg-12 d-flex align-items-strech">
    <div class="card w-100">
      <div class="card-body">
        <div class="d-sm-flex d-block align-items-center justify-content-between mb-9">
          <div class="mb-3 mb-sm-0">
            <h5 class="card-title fw-semibold">Latest News</h5>
          </div>
        </div>
        <form
        action="/admin/save_news"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="row">
        <div class="col-md-6 mt-3">
            <label>Select Image<span class="text-danger">*</span></label>
            <input type="file" class="form-control" required name="image" />
          </div>
          <div class="col-md-6 mt-3">
            <label>Date <span class="text-danger">*</span></label>
            <input type="date" class="form-control" required name="news_date" />
          </div>
          <div class="col-md-6 mt-3">
            <label>Title <span class="text-danger">*</span></label>
            <input type="text" class="form-control" required name="title" />
          </div>
          <div class="col-md-6 mt-3">
            <label>Enter Description<span class="text-danger">*</span></label>
            <textarea class="form-control" required name="description"></textarea>
          </div>
          <div class="col-md-12 text-center mt-4">
            <button class="btn btn-primary">Save News</button>
          </div>
        </div>
      </form>
      <div class="row">
        <div class="col-lg-12 mt-5">
          <table class="table table-responsive table-sm table-striped table-hover table-bordered">
            <tr>
              <th>Action</th>
              <th>SN</th>
              <th>Image</th>
              <th>Date</th>
              <th>Title</th>
              <th>Description</th>
            </tr>
            <% for(var i=0; i<news_list.length; i++){%>
                <tr>
                    <td style="white-space: nowrap;">
                        <a href="/admin/edit_news/<%=news_list[i]._id%>"><i class="ti ti-edit btn btn-sm btn-primary"></i></a>
                        <a href="/admin/delete_news/<%=news_list[i]._id%>"><i class="ti ti-trash btn btn-sm btn-danger"></i></a>
                    </td>
                    <td><%=i+1%></td>
                    <td><img src="/images/<%=news_list[i].image%>" width="100px" alt=""></td>
                    <td width="10%"><%=news_list[i].news_date%></td>
                    <td><%=news_list[i].title%></td>
                    <td><%=news_list[i].description%></td>
                </tr>
            <%}%>
          </table>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
</div>

<%- include('footer.ejs')%>