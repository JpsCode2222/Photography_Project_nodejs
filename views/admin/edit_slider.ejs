<%- include('navbar.ejs')%>
<div class="container-fluid">
  <!--  Row 1 -->
  <div class="row">
    <div class="col-lg-12 d-flex align-items-strech">
      <div class="card w-100">
        <div class="card-body">
          <div
            class="d-sm-flex d-block align-items-center justify-content-between mb-9"
          >
            <div class="mb-3 mb-sm-0">
              <h5 class="card-title fw-semibold">Manage Slider</h5>
            </div>
          </div>
          <form
            action="/admin/update_slider"
            method="post"
            enctype="multipart/form-data"
          >
            <div class="row">
              <div class="col-md-6">
                <label>Slider Image</label>
                <input type="file" class="form-control" name="slider_image" />
                <input
                  type="hidden"
                  class="form-control"
                  required
                  value="<%=slider_info.id%>"
                  name="slider_id"
                />
              </div>
              <div class="col-md-6">
                <img
                  src="/images/<%=slider_info.slider_image%>"
                  width="100px"
                  alt=""
                />
              </div>
              <div class="col-md-6">
                <label>Heading <span class="text-danger">*</span></label>
                <input
                  type="text"
                  class="form-control"
                  value="<%=slider_info.heading%>"
                  required
                  name="heading"
                />
              </div>
              <div class="col-md-6">
                <label>Sub-Heading <span class="text-danger">*</span></label>
                <input
                  type="text"
                  class="form-control"
                  value="<%=slider_info.subheading%>"
                  required
                  name="subheading"
                />
              </div>
              <div class="col-md-12 text-center mt-4">
                <button class="btn btn-primary">Update Slider</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('footer.ejs')%>
