<%- include('navbar.ejs')%>
<div class="container-fluid">
  <!--  Row 1 -->
  <div class="row">
    <div class="col-lg-12 d-flex align-items-strech">
      <div class="card w-100">
        <div class="card-body">
          <div
            class="d-sm-flex d-block align-items-center justify-content-between"
          >
            <div class="mb-sm-0">
              <h5 class="card-title fw-semibold">Manage Slider</h5>
            </div>
          </div>
          <form
            action="/admin/save_slider"
            method="post"
            enctype="multipart/form-data"
          >
            <div class="row">
              <div class="col-md-4 mt-3">
                <label>Slider Image <span class="text-danger">*</span></label>
                <input type="file" class="form-control" required name="slider_image" />
              </div>
              <div class="col-md-4 mt-3">
                <label>Heading <span class="text-danger">*</span></label>
                <input type="text" class="form-control" required name="heading" />
              </div>
              <div class="col-md-4 mt-3">
                <label>Sub-Heading <span class="text-danger">*</span></label>
                <input type="text" class="form-control" required name="subheading" />
              </div>
              <div class="col-md-12 text-center mt-4">
                <button class="btn btn-primary">Save Slider</button>
              </div>
            </div>
          </form>
          <div class="row">
            <div class="col-lg-12 mt-5">
              <table class="table table-responsive table-striped table-hover table-bordered">
                <tr>
                  <th>Action</th>
                  <th>SN</th>
                  <th>Slider Image</th>
                  <th>Heading</th>
                  <th>Sub Heading</th>
                </tr>
                <% for(var i=0; i<slider_list.length; i++){%>
                    <tr>
                        <td style="white-space: nowrap;">
                            <a href="/admin/edit_slider/<%=slider_list[i]._id%>"><i class="ti ti-edit btn btn-sm btn-primary"></i></a>
                            <a href="/admin/delete_slider/<%=slider_list[i]._id%>"><i class="ti ti-trash btn btn-sm btn-danger"></i></a>
                        </td>
                        <td><%=i+1%></td>
                        <td><img src="/images/<%=slider_list[i].slider_image%>" width="100px" alt=""></td>
                        <td><%=slider_list[i].heading%></td>
                        <td><%=slider_list[i].subheading%></td>
                    </tr>
                <%}%>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('footer.ejs')%>
